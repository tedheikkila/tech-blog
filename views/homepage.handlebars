<!-- loops over each blog for homepage render -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog" id="homepage-blogs">
  <div class="col-md-5">
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
</div>
{{/each}}
