<div>
  <a href="/dashboard" class="is-pulled-right"> &larr; Return to Dashboard</a>
  <h2 class="title mt-5">Edit Blog</h2><hr>
  <form class="edit-blog-form">
    <div>
        <label for="blog-title">Blog Name:</label>
      <input class="input" name="blog-name" type="text" value="{{blog.name}}" />
    </div>
    <div>
        <label for="blog-description">Blog Description:</label>
      <input class="textarea" name="blog-description" type="text" value="{{blog.description}}" />
    </div>
    <div class="is-pulled-right">
       Created on {{format_date blog.date_created}}
      |
      <a href="/blog/{{blog.id}}">{{blog.comments.length}} {{format_plural "comment" blog.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Update</button>
    <button type="button" class="button is-danger delete-blog-btn">Delete</button>
  </form>
</div>

{{> comments blog.comments}}

<script src="/js/dashboard.js"></script>
