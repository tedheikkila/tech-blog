<div class="row">
    <div class="col-auto">
        <h2>{{user.name}}</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Update Blog:</h3>

        <form class="form edit-blog-form" data-id="{{id}}">
            <div class="form-group">
                <label for="blog-title">Title:</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" value={{name}} />
            </div>
            <div class="form-group">
                <label for="blog-content">Content:</label>
                <textarea class="form-input" id="blog-description" name="blog-description">{{description}}</textarea>
            </div>
            <div class="form-group">
                <button type="submit" id="update-blog-btn" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/edit.js"></script>
