<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{user.name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Update Blog:</h3>

        <form class="form new-post-form" data-id="{{id}}">
            <div class="form-group">
                <label for="blog-title">Blog title:</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title" value={{name}} />
            </div>
            <div class="form-group">
                <label for="blog-content">Content:</label>
                <textarea class="form-input" id="blog-content" name="blog-content">{{description}}</textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/edit.js"></script>
