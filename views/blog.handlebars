<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p class="comment-below">Comment below</p>
  <form class="comment-form">
    <div ="input-group">
      <textarea class="comment-text"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" id="submit-comment">Submit comment</button>
  </form>
  {{#if logged_in}}
  <script src="./js/blog.js"></script>
  {{else}}
  <p class="comment-message">Log in to comment on blog</p>
  {{/if}}
</div>

