<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
   {{#if logged_in}}
   <p class="comment-below">Comment below</p>
    <form class="input-group">
      <textarea class="comment-text"></textarea>
    </form>
    <button class="btn btn-primary" id="submit-comment">Submit comment</button>
    {{else}}
    <p class="comment-message">Log in to comment on blog</p>
    {{/if}}
  
</div>